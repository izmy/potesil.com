---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  alt: string;
  link: string;
  authors?: string[];
}

const { image, alt, link, authors = [] } = Astro.props;
---

<div class="card">
  <Image src={image} alt={alt} loading="lazy" class="logo" />
  <div class="content">
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      aria-label={`${alt} (otevře se v novém okně)`}
      title={alt}
    >
      {alt}
      <span aria-hidden="true">&#x2197;</span>
    </a>
    {
      authors.length > 0 && (
        <p class="authors">
          w/{" "}
          {authors.map((author, i) => (
            <>
              <span>{author}</span>
              {i < authors.length - 1 ? " a " : ""}
            </>
          ))}
        </p>
      )
    }
  </div>
</div>

<style lang="scss">
  .card {
    background: #f5f5f5;
  }

  .logo {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .content {
    margin-top: auto;
    font-size: 1rem;
    text-align: center;
    padding: 0.5rem;

    a {
      font-weight: 700;
      text-decoration: none;
      color: purple;

      &:hover {
        text-decoration: underline;
      }
    }

    p {
      margin: 0.3rem 0 0;
      font-size: 0.8rem;
    }
  }

  .authors {
    display: none;
  }

  @media (min-height: 500px) and (min-width: 500px) {
    .authors {
      display: block;
    }
  }
</style>
